{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Aspire Dashboard",
      "type": "shell",
      "command": "dotnet run --project MyDotNetApp.AppHost/MyDotNetApp.AppHost.csproj",
      "options": {
        "cwd": "${workspaceFolder}/MyDotNetSolution"
      },
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Building.*$",
          "endsPattern": "^.*Login to the dashboard at.*$"
        }
      }
    },
    {
      "label": "Build the Solution",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}/MyDotNetSolution" }, "command": "dotnet build",
      "options": {
        "cwd": "${workspaceFolder}/MyDotNetSolution"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "Test: Run All Tests",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}/MyDotNetSolution" }, "command": "dotnet test",
      "options": {
        "cwd": "${workspaceFolder}/MyDotNetSolution"
      },
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Test: Run All (No Build)",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}/MyDotNetSolution" }, "command": "dotnet test --no-build",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Test: Detailed Output",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}/MyDotNetSolution" }, "command": "dotnet test --no-build --logger 'console;verbosity=detailed'",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Test: Minimal Output",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}/MyDotNetSolution" }, "command": "dotnet test --no-build --logger 'console;verbosity=minimal'",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Test: Quiet Output",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}/MyDotNetSolution" }, "command": "dotnet test --no-build --logger 'console;verbosity=quiet'",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Test: OutboxConsumer Only",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}/MyDotNetSolution" }, "command": "dotnet test --no-build --filter FullyQualifiedName~OutboxConsumer",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Test: OutboxConsumer Unit Tests",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}/MyDotNetSolution" }, "command": "dotnet test --no-build --filter FullyQualifiedName~OutboxConsumerServiceTests",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Test: OutboxConsumer Parallel Tests",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}/MyDotNetSolution" }, "command": "dotnet test --no-build --filter FullyQualifiedName~OutboxConsumerParallelTests",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Test: Parallel Execution Test Only",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}/MyDotNetSolution" }, "command": "dotnet test --no-build --filter FullyQualifiedName~ParallelExecution_IsFasterThanSequential",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Test: List All Tests",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}/MyDotNetSolution" }, "command": "dotnet test --no-build --list-tests",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Test: List OutboxConsumer Tests",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}/MyDotNetSolution" }, "command": "dotnet test --no-build --list-tests | Select-String 'OutboxConsumer'",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Test: Coverage with HTML Report",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}/MyDotNetSolution" }, "command": "dotnet test --no-build --collect:\"XPlat Code Coverage\" ; reportgenerator -reports:tests/MyDotNetApp.Tests/TestResults/**/coverage.cobertura.xml -targetdir:coverage-report -reporttypes:Html",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Report: Open Coverage HTML",
      "type": "shell",
      "command": "Invoke-Item coverage-report/index.html",
      "group": "none",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Test: Save Results to File",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}/MyDotNetSolution" }, "command": "dotnet test --no-build --logger 'console;verbosity=detailed' > test-results-$(Get-Date -Format 'yyyyMMdd-HHmmss').txt",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Test: Show Timing Summary",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}/MyDotNetSolution" }, "command": "dotnet test --no-build --logger 'console;verbosity=detailed' | Select-String '(Passed|Failed|Skipped).*\\[.*ms\\]'",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Test: Show Only Passed Tests",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}/MyDotNetSolution" }, "command": "dotnet test --no-build --logger 'console;verbosity=detailed' | Select-String 'Passed'",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Test: Show Test Duration Stats",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}/MyDotNetSolution" }, "command": "dotnet test --no-build --logger 'console;verbosity=detailed' | Select-String 'Passed.*\\[\\d+ ms\\]' | ForEach-Object { [int]($_.Line -replace '.*\\[(\\d+)ms\\].*', '$1') } | Measure-Object -Average -Maximum -Minimum",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Test: Find Slowest Tests",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}/MyDotNetSolution" }, "command": "dotnet test --no-build --logger \"console;verbosity=detailed\" | Select-String 'Passed.*\\[\\d+ ms\\]' | Sort-Object { [int]($_.Line -replace '.*\\[(\\d+)ms\\].*', '$1') } -Descending | Select-Object -First 10",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Test: Parallel Tests Performance",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}/MyDotNetSolution" }, "command": "dotnet test --no-build --filter FullyQualifiedName~OutboxConsumerParallelTests --logger \"console;verbosity=detailed\" | Select-String '(Passed|Test run)'",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Test: OutboxController Integration",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}/MyDotNetSolution" }, "command": "dotnet test --no-build --filter FullyQualifiedName~OutboxControllerIntegrationTests",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Test: OutboxController Integration (Detailed)",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}/MyDotNetSolution" }, "command": "dotnet test --no-build --filter FullyQualifiedName~OutboxControllerIntegrationTests --logger \"console;verbosity=detailed\"",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Test: Watch Mode (Continuous)",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}/MyDotNetSolution" }, "command": "dotnet watch test",
      "isBackground": true,
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "Test: Build and Run All",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}/MyDotNetSolution" }, "command": "dotnet build && dotnet test --no-build --logger 'console;verbosity=detailed'",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "Analysis: Count Test Categories",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}/MyDotNetSolution" }, "command": "dotnet test --no-build --list-tests | Select-String 'OutboxConsumer|OutboxProcessor|HomeBackground' | Group-Object { $_ -replace '.*\\.([^.]+Tests)\\..*', '$1' } | Select-Object Count, Name",
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Analysis: Test Summary Report",
      "type": "shell",
      "command": "$output = dotnet test --no-build --logger \"console;verbosity=detailed\"; $passed = ($output | Select-String 'Passed').Count; $failed = ($output | Select-String 'Failed').Count; $total = ($output | Select-String 'Test run').Line -replace '.*Total tests: (\\d+).*', '$1'; Write-Host \"\\n=== TEST SUMMARY ===\"; Write-Host \"Total: $total\"; Write-Host \"Passed: $passed\"; Write-Host \"Failed: $failed\"; Write-Host \"===================\"; $output",
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Clean: Remove bin and obj",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}/MyDotNetSolution" }, "command": "dotnet clean",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Clean: Deep Clean (bin/obj folders)",
      "type": "shell",
      "command": "Get-ChildItem -Include bin,obj -Recurse -Force | Remove-Item -Force -Recurse",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Rebuild: Clean and Build",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}/MyDotNetSolution" }, "command": "dotnet clean && dotnet build",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "Test: All Tests with Memory Report",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-Command",
        "Write-Host '=== STARTING TEST EXECUTION ===' -ForegroundColor Green; Write-Host 'Running all 93 tests...'; Write-Host ''; dotnet test --no-build -v minimal; Write-Host ''; Write-Host '=== MEMORY CLEANUP VERIFICATION ===' -ForegroundColor Green; [GC]::Collect(); [GC]::WaitForPendingFinalizers(); [GC]::Collect(); Write-Host '✓ All generations collected'; Write-Host '✓ All finalizers executed'; Write-Host ''; Write-Host 'Current Process Memory Status:' -ForegroundColor Cyan; $proc = Get-Process -Id $PID; Write-Host \"  Working Set: $($proc.WorkingSet / 1MB) MB\"; Write-Host \"  Private Memory: $($proc.PrivateMemorySize64 / 1MB) MB\"; Write-Host \"  Handles: $($proc.Handles)\"; Write-Host ''; Write-Host '✓ Memory is clean and ready for next operations' -ForegroundColor Green; Write-Host ''; Write-Host '=== TEST REPORT ===' -ForegroundColor Yellow; Write-Host 'See TEST_REPORT.md in the workspace root for detailed analysis'"
      ],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Test: Non-Knapsack Only",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}/MyDotNetSolution" }, "command": "dotnet test --no-build --filter \"FullyQualifiedName!~Knapsack\" -v minimal",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Test: Knapsack Only",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}/MyDotNetSolution" }, "command": "dotnet test --no-build --filter \"FullyQualifiedName~Knapsack\" -v minimal",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}

