{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Error"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=prod-server;Database=MyDotNetDb;User Id=sa;Password=YourSecurePasswordHere;Connection Timeout=30;"
  },
  "Processing": {
    "BatchSize": 5000,
    "MaxParallelStidGroups": 20,
    "PollIntervalMs": 2000,
    "MaxRetries": 5
  },
  "Publishing": {
    "BatchSize": 10000,
    "FlushIntervalMs": 500
  },
  "Kafka": {
    "BootstrapServers": "kafka1:9092,kafka2:9092,kafka3:9092",
    "TopicName": "outbox-events",
    "BatchSize": 1000,
    "PollingIntervalMs": 2000
  }
}
