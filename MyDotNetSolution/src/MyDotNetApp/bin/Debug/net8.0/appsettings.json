{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=MyDotNetDb;Trusted_Connection=true;Connection Timeout=30;"
  },
  "Processing": {
    "BatchSize": 1000,
    "MaxParallelStidGroups": 10,
    "PollIntervalMs": 5000,
    "MaxRetries": 3
  },
  "Publishing": {
    "BatchSize": 5000,
    "FlushIntervalMs": 1000
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "TopicName": "outbox-events",
    "BatchSize": 100,
    "PollingIntervalMs": 5000
  }
}

