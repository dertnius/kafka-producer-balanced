{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=MyDotNetDb;Trusted_Connection=true;Connection Timeout=30;"
  },
  "KafkaOutboxSettings": {
    "BootstrapServers": "localhost:9092",
    "TopicName": "outbox-events",
    "SchemaRegistryUrl": "http://localhost:8081",
    "BatchSize": 50000,
    "PollingIntervalMs": 10,
    "MaxConcurrentProducers": 20,
    "MaxProducerBuffer": 200000,
    "DatabaseConnectionPoolSize": 40,
    "EnableAdaptiveBackoff": true,
    "MaxPollingIntervalMs": 5000,
    "IdleThresholdMs": 100,
    "BackoffMultiplier": 1.5
  }
}

