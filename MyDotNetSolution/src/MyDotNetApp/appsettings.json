{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=MyDotNetDb;Trusted_Connection=true;Connection Timeout=30;"
  },
  "KafkaOutboxSettings": {
    "BootstrapServers": "localhost:9092",
    "TopicName": "outbox-events",
    "SchemaRegistryUrl": "http://localhost:8081",
    "BatchSize": 5000,
    "PollingIntervalMs": 5,
    "MaxConcurrentProducers": 12,
    "MaxProducerBuffer": 20000,
    "DatabaseConnectionPoolSize": 30,
    "EnableAdaptiveBackoff": true,
    "MaxPollingIntervalMs": 30000,
    "IdleThresholdMs": 100,
    "BackoffMultiplier": 2.0
  },
  "Publishing": {
    "BatchSize": 500,
    "FlushIntervalMs": 100
  }
}

